{
  "name": "ez-cli",
  "version": "1.0.0",
  "description": "A cli to create an MPA egg project easily",
  "author": "xxxxxMiss",
  "license": "MIT",
  "repository": "xxxxxMiss/ez-cli",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "jsnext:main": "dist/index.es.js",
  "bin": {
    "ez": "./index.js"
  },
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "scripts": {
    "build": "rollup -c",
    "start": "rollup -c -w",
    "commit": "git-cz",
    "release": "standard-version",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid",
    "trailingComma": "es5"
  },
  "devDependencies": {
    "cross-env": "^5.1.4",
    "codecov": "^3.1.0",
    "commitizen": "^3.0.2",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.0.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-standard": "^3.1.0",
    "husky": "^1.1.2",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3",
    "standard-version": "^4.4.0",
    "jest": "^23.5.0"
  },
  "files": [
    "dist",
    "src"
  ],
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "coverageDirectory": "./coverage/",
    "errorOnDeprecated": true,
    "globals": {},
    "verbose": true
  },
  "dependencies": {
    "execa": "^1.0.0",
    "fs-extra": "^7.0.1",
    "inquirer": "^6.2.1",
    "yargs": "^12.0.5"
  }
}
