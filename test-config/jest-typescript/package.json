{
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "testMatch": [
      "**/__tests__/*.spec.{js,ts,tsx}"
    ],
    "coverageDirectory": "./coverage/",
    "errorOnDeprecated": true,
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.test.json"
      }
    },
    "verbose": true
  },
  "devDependencies": {
    "jest": "^24.0.0",
    "ts-jest": "^24.0.0"
  }
}
